  <script>
    // Desktop dropdown
    const dd = document.getElementById('servicesDropdown');
    const btn = document.getElementById('servicesBtn');

    function closeDropdown(e){
      if (!dd.contains(e.target)) dd.classList.remove('open');
      btn?.setAttribute('aria-expanded', dd.classList.contains('open') ? 'true' : 'false');
    }

    btn?.addEventListener('click', () => {
      dd.classList.toggle('open');
      btn.setAttribute('aria-expanded', dd.classList.contains('open') ? 'true' : 'false');
    });
    document.addEventListener('click', closeDropdown);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') dd.classList.remove('open');
      btn?.setAttribute('aria-expanded', dd.classList.contains('open') ? 'true' : 'false');
    });

    // Mobile menu
    const hb = document.getElementById('hamburgerBtn');
    const panel = document.getElementById('mobilePanel');
    hb?.addEventListener('click', () => {
      document.body.classList.toggle('mobile-open');
      hb.setAttribute('aria-label', document.body.classList.contains('mobile-open') ? 'Close menu' : 'Open menu');
    });

    const msb = document.getElementById('mobileServicesBtn');
    const msub = document.getElementById('mobileServicesSub');
    msb?.addEventListener('click', () => {
      const open = msub.style.display === 'block';
      msub.style.display = open ? 'none' : 'block';
      msb.querySelector('span').textContent = open ? '‚ñæ' : '‚ñ¥';
    });
  </script>
